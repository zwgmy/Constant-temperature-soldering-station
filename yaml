binary_sensor:
#####旋转编码器按键#######
  - platform: gpio
    pin:
      number: GPIO21
#      sn74hc165: sn74hc165_hub
      # Use pin number 1
#      number: 1
#      inverted: false
      mode:
        input: true
        pullup: true
      inverted: True
  #  name: my_key
    id: key_state
    internal: true
    filters:
      - delayed_on: 10ms
      - delayed_off: 10ms
    on_press:
      then:
#        - globals.set:
#            id: target_temperature
#            value: !lambda 'return id(rotary_encoder1).state;'
#        - climate.control:
#            id: climate11
#            target_temperature: !lambda 'return id(target_temperature);'            


#        - component.update: st7789vd        
#        - lambda: |-
#            id(target_temperature).state = id(rotary_encoder1).state;
#            id(st7789vd).update();

        - lambda: |-
            id(setting_mode) = !id(setting_mode);
            if (id(setting_mode)) {
              ESP_LOGD("main", "Entering setting mode");
            } else {
              ESP_LOGD("main", "Exiting setting mode");}


globals:
#  - id: target_temperature
#    type: float
#    restore_value: yes
#    initial_value: '100.0'

  - id: setting_mode
    type: bool
    restore_value: no
    initial_value: 'false'

climate:
  - platform: thermostat
    visual:
      min_temperature: 0
      max_temperature: 280
      temperature_step: 1
    name: "Thermostat Controller"
    sensor: temperature_sensor
    id: climate11
    min_heating_off_time: 3s
    min_heating_run_time: 3s
    min_idle_time: 2s
    heat_deadband: 1  #加热前的最小温差（温度低于设定点）
    heat_overrun: 1  #释放热量之前的最小温差（加热超出设定点）

    heat_action:
      - switch.turn_on: heater_switch
      - switch.turn_on: sw4_595
    idle_action:
      - switch.turn_off: heater_switch
      - switch.turn_off: sw4_595

    default_preset: Preset50
    preset:
      - name: "Preset50"
        default_target_temperature_low: 50 °C
        mode: HEAT
      - name: "Preset150"
        default_target_temperature_low: 150 °C
        mode: HEAT        
#        default_target_temperature_high: 300 °C
#        cool_action: []  # 空的冷却动作


sensor:
  - platform: max6675
    name: "max6675"
    cs_pin: GPIO9
    id: temperature_sensor
    update_interval: 1s


  - platform: rotary_encoder
    name: "Rotary Encoder"
    pin_a: GPIO1
    pin_b: GPIO0
    min_value: 0
    max_value: 300
    resolution: 1
    id: rotary_encoder1
#    pin_reset: GPIO12
#    restore_mode: ALWAYS_ZERO
#    filters:
#      debounce: 30ms
#    on_value:
#      then:
#        - globals.set:
#            id: target_temperature
#            value: !lambda 'return id(rotary_encoder1).state;'
#        - component.update: st7789vd

    on_clockwise:
      then:
        - lambda: |-
            if (id(setting_mode)) {
              auto temp = id(climate11).target_temperature + 0.5;
              if (temp <= id(climate11).get_traits().get_visual_max_temperature()) {
                id(climate11).target_temperature = temp;
              } 
            }
    on_anticlockwise:
      then:
        - lambda: |-
            if (id(setting_mode)) {
              auto temp = id(climate11).target_temperature - 0.5;
              if (temp >= id(climate11).get_traits().get_visual_min_temperature()) {
                id(climate11).target_temperature = temp;
              }
            }




